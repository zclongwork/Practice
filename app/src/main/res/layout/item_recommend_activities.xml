<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:id="@+id/ll_recommend_activities"
    >

    <LinearLayout
        android:id="@+id/ll_recommend_activities_contentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/iv_recommend_activities_pic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/iv_recommend_activities_pic_end"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_recommend_activities_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:text="糖果色连衣裙专场"
            />


        <!--<TextView
            android:id="@+id/tv_recommend_activities_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_2dp"
            android:paddingBottom="@dimen/padding_2dp"
            android:paddingLeft="@dimen/padding_10dp"
            android:textSize="@dimen/common_font_size_14"
            android:textColor="@color/default_text_color"
            android:text="连衣裙在各种款式造型中誉为“款式皇后”"
            />-->


        <TextView
            android:id="@+id/tv_recommend_activities_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"
            android:text="*租赁品类"
            />

        <TextView
            android:id="@+id/tv_recommend_activities_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"
            android:text="*¥55-155"
            />

        <TextView
            android:id="@+id/tv_recommend_activities_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"
            android:text="*时间"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_dark"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_recommend_activities_starttime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:text="2天15时37分33秒"
                android:textColor="@android:color/holo_red_dark"
                />

            <TextView
                android:id="@+id/tv_recommend_activities_panic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginRight="10dp"
                android:text="正在抢批"
                android:textColor="@android:color/holo_red_dark"
                android:background="@android:color/background_light"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/holo_red_dark"
        ></View>

</LinearLayout>