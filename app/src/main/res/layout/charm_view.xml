<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >




    <TextView
        android:id="@+id/charm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@mipmap/charm_bg"
        android:gravity="center_vertical"
        android:paddingLeft="6dp"
        android:text="1234567魅力 >"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/charm_text_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/charm_bg_light"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/charm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/charm_text"
        />

    <ImageView
        android:id="@+id/charm_title_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-42dp"
        android:src="@mipmap/charm_title_light"
        />




    <ImageView
        android:id="@+id/charm_star_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/charm_star_left"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/charm_star_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/charm_star_right"
        android:visibility="gone"
        />

</FrameLayout>